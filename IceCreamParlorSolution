#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int t;
    cin >> t;
    while(t--)
    {
        int n, m;
        cin>>m>>n;
        int flag=0;
        int ar[n];
        for(int i=0;i<n;i++)
        { 
            cin>>ar[i];
            for(int j=0;j<i;j++)
            {
                if(ar[i]+ar[j]==m)
                    cout<<j+1<<" "<<i+1<<endl;
            }
        }        
        
    }
return 0;
}

